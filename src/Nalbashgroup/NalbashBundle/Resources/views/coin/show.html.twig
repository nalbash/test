{% extends 'NalbashgroupNalbashBundle:Default:index.html.twig' %}
{% block title %}
- coin {{ coin.id }}
{% endblock %}

{% block header %}
- coin {{ coin.id }}
{% endblock %}
{% block body %}
    <h1>Coin</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ coin.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ coin.name }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ coin.country }}</td>
            </tr>
            <tr>
                <th>Denomination</th>
                <td>{{ coin.denomination }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ coin.year }}</td>
            </tr>
        </tbody>
    </table>


{% endblock %}

{% block saidbar %}
    <li>
        <a href="{{ path('coin_edit', { 'id': coin.id }) }}">Edit</a>
    </li>
    <li>
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </li>
{% endblock %}
